@model AcademiaFit.Application.ViewModels.SerieViewModel
@{
    ViewData["Title"] = "Criação de Serie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Criação de Série</h1>
<br />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Cadastrar" class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-6">
                <h4>Dados do Professor Responsável e Aluno</h4>
                <hr />
                <div class="form-group">
                    <div class="col-6">
                        <label>Professor Responsável</label>
                    </div>
                    <div class="col-12">
                        @Html.DropDownListFor(m => m.Serie.ProfessorResponsavel.Id, Model.ListaProfessores, "-- Por favor, selecione um professor responsável --", new { @class = "form-control" })
                        <span asp-validation-for="Serie.ProfessorResponsavel.Id" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-6">
                        <label>Aluno</label>
                    </div>
                    <div class="col-12">
                        @Html.DropDownListFor(m => m.Serie.Aluno.Id, Model.ListaAlunos, "-- Por favor, selecione o aluno --", new { @class = "form-control" })
                        <span asp-validation-for="Serie.Aluno.Id" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <h4>Dados da Série</h4>
                <hr />
                <div class="form-group col-12">
                    <div class="col-6 row">
                        <label>Exercicio</label>
                    </div>
                    <div class="col-12 row">
                        <select class="form-control col-10"></select>
                        <button class="btn btn-primary" style="margin-left:25px;">+</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
